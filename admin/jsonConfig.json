{
    "i18n": true,
    "type": "panel",
    "items": {
        "_headerAdapter": {
            "type": "header",
            "text": "hiob adapter settings",
            "size": 2
        },
        "port": {
            "type": "port",
            "label": "select a port",
            "sm":3,
            "md":3,
            "lg":3,
            "xs":12,
            "xl": 4,
            "default": 8090,
            "newLine": true
        },
        "useCert": {
            "type": "checkbox",
            "label": "useCert",
            "tooltip": "useCert_tooltip",
            "default": false,
            "newLine": true
        },
        "staticLink": {
            "type": "staticLink",
            "text": "link to description",
            "href": "https://github.com/moba15/ioBroker.hiob/blob/main/docs%2Fde%2FsecureCon.md",
            "icon": "info",
            "newLine": true
        },
        "certPath": {
            "newLine": true,
            "type": "text",
            "label": "certPath",
            "tooltip": "certPath_tooltip",
            "disabled": "!data.useCert",
            "hidden": "!data.useCert",
            "sm": 12,
            "md": 6,
            "lg": 3,
            "xs": 12,
            "xl": 4,
            "default": ""
        },
        "keyPath": {
            "newLine": true,
            "type": "text",
            "label": "keyPath",
            "tooltip": "keyPath_tooltip",
            "disabled": "!data.useCert",
            "hidden": "!data.useCert",
            "sm": 12,
            "md": 6,
            "lg": 3,
            "xs": 12,
            "xl": 4,
            "default": ""
        }
    }
}